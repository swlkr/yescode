#!/usr/bin/env ruby

require "yescode"

command, *args = ARGV

case command
when "g", "gen", "generate"
  Yescode::Generator.generate(*args)
when "migrate"
  Yescode::Database.migrate
when "rollback"
  Yescode::Database.rollback(*args)
when "-v", "--version"
  puts Yescode::VERSION
else
  puts Yescode::Generator::INVALID_COMMAND_MESSAGE
end
